/* pages/homepage/homepage.wxss */
/* poster */
page {
  background-color: #efefee;
}

swiper {
  height: 350rpx;
  margin: 0 10rpx;
}

swiper image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

/* 九宫格 */
.grid {
  display: flex;
  flex-wrap: wrap;
  border: 1rpx solid #aaaaaa;
  border-top: 1rpx solid #aaaaaa;
  background-color: white;
  margin: 20rpx 10rpx;

  border-radius: 20rpx;
}

.grid-chil {
  width: 33.33%;
  height: 200rpx;
  display: flex;
  /* 纵向布局 */
  flex-direction: column;
  /* 横纵向居中 */
  align-items: center;
  justify-content: center;
  
  
  /* border-right: 1rpx solid #aaaaaa;
  border-bottom: 1rpx solid #aaaaaa; */
  /* border-radius: 20rpx; */
  /* box-sizing: 默认使用chorme的标准，content-box，即盒子不计边框; */
  box-sizing: border-box;
}

.grid-chil image {
  width: 80rpx;
  height: 80rpx;
}

.grid-chil text {
  font-size: 24rpx;
  margin-top: 10rpx;
}


/* 小插件 */
.function {
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  border: 2rpx solid #efefef;
  
  border-radius: 40rpx;
}

.function-chil {
  width: 33.33%;
  height: 200rpx;
  display: flex;

  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.function-chil image {
  width: 100rpx;
  height: 100rpx;
}

.episode {
  color: #aaaaaa;
  text-align: center;
  margin: 20rpx 10rpx 5rpx 10rpx;
  border-radius: 20rpx;
  background-color: white;
  border: 1rpx solid #efefef;
}